# Backend Configuration

FLASK_ENV=development
PORT=5000
DEBUG=True

# Database Configuration (for production)
DATABASE_URL=sqlite:///cms.db

# API Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

